{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "@/*": [
      "./src/*"
    ],
    "@copilotkit/react-core/*": [
      "../packages/react-core/*"
    ],
    "@copilotkit/react-ui/*": [
      "../packages/react-ui/*"
    ],
    "@copilotkit/react-textarea/*": [
      "../packages/react-textarea/*"
    ]
  }
}
